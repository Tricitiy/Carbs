-- Services
local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Create the main frame (landscape rectangle with rounded corners)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 200)  -- Big rectangle (500 width, 200 height)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -100)  -- Center the frame on the screen
mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)  -- Dark background color
mainFrame.BackgroundTransparency = 0  -- No transparency
mainFrame.BorderSizePixel = 0  -- No border
mainFrame.Parent = screenGui

-- Make the corners rounded
mainFrame.ClipsDescendants = true
local cornerRadius = UDim.new(0, 20)  -- Adjust this for more or less rounded corners

local corner1 = Instance.new("UICorner")  -- Create a UICorner for rounded edges
corner1.CornerRadius = cornerRadius
corner1.Parent = mainFrame
