local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create the screen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BlackBoxGui"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Create the black draggable box
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 0.5, -50)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BackgroundTransparency = 0.2
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- Create and apply an expanded hitbox for the ball
local ball = workspace:WaitForChild("Ball")

-- Create a transparent, green glass dome hitbox around the ball
local hitbox = Instance.new("Part")
hitbox.Size = Vector3.new(20, 20, 20) -- Adjust size as needed
hitbox.Shape = Enum.PartType.Ball
hitbox.Transparency = 0.5
hitbox.Color = Color3.fromRGB(0, 255, 0)
hitbox.Material = Enum.Material.Glass
hitbox.Anchored = true
hitbox.CanCollide = false
hitbox.Name = "ExpandedHitbox"
hitbox.Parent = workspace

-- Update hitbox position to follow the ball
game:GetService("RunService").RenderStepped:Connect(function()
    if ball and ball.Parent then
        hitbox.Position = ball.Position
    end
end)
