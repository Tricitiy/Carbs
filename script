local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Create ScreenGui and TextLabel
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BallColorNotifier"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local noticeLabel = Instance.new("TextLabel")
noticeLabel.Size = UDim2.new(0, 200, 0, 50)
noticeLabel.Position = UDim2.new(0.5, -100, 0.1, 0)
noticeLabel.BackgroundTransparency = 0.5
noticeLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
noticeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
noticeLabel.TextScaled = true
noticeLabel.Font = Enum.Font.GothamBold
noticeLabel.Text = ""
noticeLabel.Visible = false
noticeLabel.Parent = screenGui

-- Check for red ball every frame
RunService.RenderStepped:Connect(function()
	for _, ball in ipairs(workspace:GetDescendants()) do
		if ball:IsA("Part") and ball.Name:lower():find("ball") then
			local color = ball.Color
			if color == Color3.fromRGB(255, 0, 0) then -- exact red
				noticeLabel.Text = "The ball is red"
				noticeLabel.Visible = true
				return -- show the message only once for any red ball
			end
		end
	end
	-- Hide message if no red balls found
	noticeLabel.Visible = false
end)
