local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CustomUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("CoreGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 450, 0, 275)
mainFrame.Position = UDim2.new(0.5, -225, 0.5, -137)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BackgroundTransparency = 0.2  -- Set transparency for the main frame
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 12)
mainCorner.Parent = mainFrame

-- HeadBar
local headBar = Instance.new("Frame")
headBar.Size = UDim2.new(1, 0, 0, 40)
headBar.Position = UDim2.new(0, 0, 0, 0)
headBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
headBar.BackgroundTransparency = 0.2  -- Set transparency for the headBar
headBar.Parent = mainFrame

local headCorner = Instance.new("UICorner")
headCorner.CornerRadius = UDim.new(0, 12)
headCorner.Parent = headBar

-- Create the TextLabel for the middle of the HeadBar
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 1, 0)  -- Size of the TextLabel, adjust as needed
textLabel.Position = UDim2.new(0.5, 0, 0.5, 0)  -- Center the TextLabel
textLabel.AnchorPoint = Vector2.new(0.5, 0.5)  -- Anchor at the center
textLabel.BackgroundTransparency = 1  -- Remove the background
textLabel.Text = "Inertia"  -- Set your desired text
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Set text color
textLabel.TextSize = 20  -- Set text size
textLabel.Font = Enum.Font.GothamBold  -- Set font type to GothamBold
textLabel.Parent = headBar  -- Parent it to the headBar

-- SideBar
local sideBar = Instance.new("Frame")
sideBar.Size = UDim2.new(1/3, 0, 1, -40)
sideBar.Position = UDim2.new(0, 0, 0, 40)
sideBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
sideBar.BackgroundTransparency = 0.2  -- Set transparency for the sideBar
sideBar.Parent = mainFrame

local sideCorner = Instance.new("UICorner")
sideCorner.CornerRadius = UDim.new(0, 12)
sideCorner.Parent = sideBar

-- Misc Button
local miscButton = Instance.new("TextButton")
miscButton.Size = UDim2.new(0.8, 0, 0, 50)  -- Adjust the size as needed
miscButton.Position = UDim2.new(0.1, 0, 0, 10)  -- Position inside the sidebar with some margin
miscButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)  -- Set background color
miscButton.Text = "Misc"  -- Text displayed on the button
miscButton.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Text color
miscButton.TextSize = 18  -- Text size
miscButton.Font = Enum.Font.GothamBold  -- Font type
miscButton.Parent = sideBar  -- Parent it to the sidebar

-- Adding UICorner to the button to make it rounded
local miscButtonCorner = Instance.new("UICorner")
miscButtonCorner.CornerRadius = UDim.new(0, 12)  -- Rounded corners for the button
miscButtonCorner.Parent = miscButton

-- Button Click Event
miscButton.MouseButton1Click:Connect(function()
    -- Add your functionality here when the Misc button is clicked
    print("Misc button clicked!")
end)
