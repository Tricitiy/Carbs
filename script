local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BallColorBox"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("CoreGui")

-- Main draggable frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 50)
frame.Position = UDim2.new(0.3, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BackgroundTransparency = 0.2
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = frame

-- Label inside the frame
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 1, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundTransparency = 1
label.Text = "Ball is not red"
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextSize = 18
label.Font = Enum.Font.GothamBold
label.Parent = frame

-- Function to check if a color is a shade of red
local function isSimilarToRed(color)
    return color.R > 0.5 and color.G < 0.3 and color.B < 0.3
end

-- Detection loop
RunService.RenderStepped:Connect(function()
    local redDetected = false

    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Part") and obj.Name:lower():find("ball") then
            if isSimilarToRed(obj.Color) then
                redDetected = true
                break
            end
        end
    end

    if redDetected then
        label.Text = "The ball is red"
    else
        label.Text = "Ball is not red"
    end
end)
